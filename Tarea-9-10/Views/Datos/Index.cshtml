<h3>Lista de feligrenses</h3>
<div id="secretos">

</div>

<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">
                <label>Solicitud</label>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @*Formulario para datos Personales*@
                <div id="personal">
                    <h3>Datos Personales</h3>
                    <form id="formularioS" name="formularioS">
                        <div class="form-group">
                            <label for="txtId">Id Feligrense</label>
                            <input type="number" class="form-control borrar" id="txtId" placeholder="Ingrese Id" readonly>
                        </div>
                        <div class="form-group">
                            <label for="txtNombre">Nombre</label>
                            <input type="text" class="form-control borrar obligatorio" id="txtNombre" placeholder="Ingrese su nombre">
                        </div>
                        <div class="form-group">
                            <label for="txtApellido">Apellido</label>
                            <input type="text" class="form-control borrar obligatorio" id="txtApellido" placeholder="Ingrese su apellido">
                        </div>
                        <div class="form-group">
                            <label for="txtAutoridades">Sexo</label>
                            <br />
                            <label><input type="checkbox"  id="txtSexo" name="sexoM" class="masculinoS" value="Masculino" onclick='validarSexo(formularioS.sexoM, 1)'>Masculino</label>
                            <label><input type="checkbox" id="txtSexo" name="sexoF" value="Femenino" onclick="validarSexo(formularioS.sexoF, 1)">Femenino</label>
                        </div>
                        <div class="form-group">
                            <label for="imgFoto">Foto en jpg</label>
                            <br />
                            <img id="imgFoto" width="150" , height="100" style="border:1px" />
                            <br />
                            <input type="file" value="..." id="btnFoto" />
                        </div>
                        <div class="form-group">
                            <label for="txtFecha">Fecha</label>
                            <input type="text" class="form-control borrar obligatorio" id="txtFecha" placeholder="Ingrese su fecha de nacimiento">
                        </div>
                        <div class="form-group">
                            <label for="txtPaisN">Pais de nacimiento</label>
                            <select id="txtPaisN" class="form-control borrar">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="txtCiudadN">Ciudad de nacimiento</label>
                            <input type="text" class="form-control borrar obligatorio" id="txtCiudadN" placeholder="Ingrese su ciudad de nacimiento">
                        </div>
                        <div class="form-group">
                            <label for="txtPaisA">Pais de residencia Actual</label>
                            <select id="txtPaisA" class="form-control borrar">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="txtCiudadA">Ciudad de residencia actual</label>
                            <input type="text" class="form-control borrar obligatorio" id="txtCiudadA" placeholder="Ingrese su ciudad de residencia actual">
                        </div>
                        <div class="form-group">
                            <label for="txtDireccion">Direccion</label>
                            <textarea class="form-control borrar" id="txtDireccion" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="txtTelefonoP">Telefono</label>
                            <input type="number" class="form-control borrar obligatorio" id="txtTelefonoP" placeholder="Ingrese su telefono">
                        </div>
                        <div class="form-group">
                            <label for="txtCelularC">Celular</label>
                            <input type="number" class="form-control borrar" id="txtCelularC" placeholder="Ingrese su celular">
                        </div>
                        <div class="form-group">
                            <label for="txtCorreo">Correo electronico</label>
                            <input type="email" class="form-control borrar" id="txtCorreo">
                        </div>
                        <div class="form-group">
                            <label for="txtDocumentoI">Tipo de documento de identidad</label>
                            <br />
                            <label><input type="checkbox" id="cedula" name="cedulas" value="cedula" onclick="validarDocumento(formularioS.cedulas, 1);showContent3()" class="tipoD">Cedula</label>
                            <label><input type="checkbox" id="pasaporte" name="pasaportes" value="Pasaporte" onclick="validarDocumento(formularioS.pasaportes, 1);showContent3()" class="tipoD">Pasaporte</label>
                            <label><input type="checkbox" id="dni" name="dnis" onclick="validarDocumento(formularioS.dnis, 1);showContent3()" value="DNI" class="tipoD">DNI</label>
                        </div>
                        <div class="form-group" style="display:none;" id="documento">
                            <label for="razon">Documento de identidad</label>
                            <input type="number" class="form-control borrar obligatorio" id="documentoI" placeholder="Ingrese su documento de identidad">
                        </div>
                        <div class="form-group" style="display:none;">
                            <select class="form-control" id="txtUsuario">
                            </select>
                        </div>
                    </form>
                </div>

                @*Formulario para datos familiares*@
                <div id="empresa">
                    <h3>Datos Familiares</h3>
                    <form id="formulario2" name="formulario2">
                        <div class="form-group">
                            <label for="txtEmpresa">Estado Civil</label>
                            <br />
                            <label><input type="checkbox" id="casado" class="EstadoCivil" name="cados" value="Casado(a)" onclick="validarEstadoCivil(formulario2.cados, 1);showContent4()">Casado(a)</label>
                            <label><input type="checkbox" id="soltero" class="EstadoCivil" name="solteros" value="Soltero(a)" onclick="validarEstadoCivil(formulario2.solteros, 1)">Soltero(a)</label>
                        </div>
                        <div class="form-group" style="display:none;" id="documentopare">
                            <label for="nombrepa">Nombre de esposo(a)</label>
                            <input type="text" class="form-control borrar" id="nombrepa" placeholder="Ingrese el nombre de su esposo(a)">
                        </div>
                        <div class="form-group">
                            <label for="txtEmpresa">Hijos</label>
                            <br />
                            <label><input type="checkbox" class="hijos" id="si" name="hijossi" value="Si" onclick="validarHijo(formulario2.hijossi, 1);showContent()">Si</label>
                            <label><input type="checkbox" class="hijos" id="hijos2" name="hijosno" value="No" onclick="validarHijo(formulario2.hijosno, 1)">No</label>
                        </div>
                        <div class="form-group" style="display:none;" id="txtHijo">
                            <label for="txtHijos">Numero de hijos</label>
                            <input type="number" class="form-control borrar" id="txtHijos" placeholder="Ingrese el numero de hijos">
                        </div>
                    </form>

                    @*Formulario para datos laborales*@
                    <h3>Datos Laborales</h3>
                    <form>
                        <div class="form-group">
                            <label for="txtProfesion">Profesion</label>
                            <input type="text" class="form-control borrar" id="Profesion" placeholder="Ingrese su profesion">
                        </div>
                        <div class="form-group">
                            <label for="txtOActual">Ocupacion Actual</label>
                            <input type="text" class="form-control borrar" id="txtOActual" placeholder="Ingrese su ocupacion actual">
                        </div>
                        <div class="form-group">
                            <label for="txtEmpresa">Empresa</label>
                            <input type="text" class="form-control borrar" id="txtEmpresa" placeholder="Ingrese el nombre de la empresa donde trabaja">
                        </div>
                        <div class="form-group">
                            <label for="txtTelefonoT">Telefono</label>
                            <input type="number" class="form-control borrar" id="txtTelefonoT" placeholder="Ingrese un numero de telefono">
                        </div>
                    </form>
                </div>


                @*Formulario para datos eclesiasticos*@
                <div id="empresa2">
                    <h3>Datos Eclesiasticos</h3>
                    <form id="formulario" name="formulario">
                        <div class="form-group">
                            <label for="txtFechaCon">Fecha de conversion</label>
                            <input type="text" class="form-control borrar obligatorio" id="txtFechaCon">
                        </div>
                        <div class="form-group">
                            <label for="txtFechabau">Fecha de bautismo</label>
                            <input type="text" class="form-control borrar obligatorio" id="txtFechabau">
                        </div>
                        <div class="form-group">
                            <label for="txtFechaAceptado">Fecha en la que fue aceptado(a) como miembro de la iglesia</label>
                            <input type="text" class="form-control borrar obligatorio" id="txtFechaAceptado">
                        </div>
                        <div class="form-group">
                            <label for="txtEmpresa">Denominación a la que pertenece</label>
                            <br />
                            <label><input type="checkbox" class="DenominacionP" value="Bautista" name="Bautista" onclick='validar(formulario.Bautista,1)'>Bautista</label>
                            <br />
                            <label><input type="checkbox" class="DenominacionP" value="Pentecostal" name="Pentecostal" onclick='validar(formulario.Pentecostal,1)'>Pentecostal</label>
                            <br />
                            <label><input type="checkbox" class="DenominacionP" value="Metodista" name="Metodista" onclick='validar(formulario.Metodista,1)'>Metodista</label>
                            <br />
                            <label><input type="checkbox" class="DenominacionP" value="Católica" name="Católica" onclick='validar(formulario.Católica,1)'>Católica</label>
                            <br />
                            <label><input type="checkbox" class="DenominacionP" value="Presbiteriana" name="Presbiteriana" onclick='validar(formulario.Presbiteriana,1)'>Presbiteriana</label>
                            <br />
                            <label><input type="checkbox" class="DenominacionP" value="Adventista" name="Adventista" onclick='validar(formulario.Adventista,1)'>Adventista</label>
                            <br />
                            <label><input type="checkbox" class="DenominacionP" value="Templo_Biblico" name="Templo_Biblico" onclick='validar(formulario.Templo_Biblico,1)'>Templo_Biblico</label>
                            <br />
                            <label><input type="checkbox" class="DenominacionP" value="Menonita" name="Menonita" onclick='validar(formulario.Menonita,1)'>Menonita</label>
                            <br />
                            <label><input type="checkbox" class="DenominacionP" value="Luterana" name="Luterana" onclick='validar(formulario.Luterana,1)'>Luterana</label>
                            <br />
                            <label><input type="checkbox" class="DenominacionP" id="DenominacionP" value="Otra" name="Otra" onclick='validar(formulario.Otra, 1);showContent6()'>Otra</label>
                        </div>
                        <div class="form-group" style="display:none" id="OtraIglesia">
                            <label for="txtOtra">Otra</label>
                            <input type="text" class="form-control borrar" id="txtOtra" placeholder="Ingrese denominacion a la que pertenece">
                        </div>
                        <div class="form-group" id="txtnameIglesia">
                            <label for="txtNombreIglesia">Nombre de la iglesia</label>
                            <input type="text" class="form-control borrar obligatorio" id="txtNombreIglesia" placeholder="Ingrese el nombre de la iglesia">
                        </div>
                        <div class="form-group">
                            <label for="txtCongrebaAn">Si asiste a esta iglesia por un tiempo menor a un año, ¿dónde se congregaba antes?</label>
                            <input type="text" class="form-control borrar" id="txtCongrebaAn">
                        </div>
                        <div class="form-group">
                            <label for="txtNpastorActu">Nombre del pastor de su iglesia actual</label>
                            <input type="text" class="form-control borrar obligatorio" id="txtNpastorActu">
                        </div>
                    </form>
                </div>

                <div id="eclesiasticos2">
                    <h3>Datos Eclesiasticos</h3>
                    <form id="formulario3" name="formulario3">
                        <div class="form-group">
                            <label for="txtEmpresa">¿Ha sido disciplinado alguna vez?</label>
